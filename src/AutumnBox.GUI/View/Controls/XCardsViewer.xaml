<UserControl x:Class="AutumnBox.GUI.View.Controls.XCardsViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutumnBox.GUI.View.Controls"
             xmlns:viewmodel="clr-namespace:AutumnBox.GUI.ViewModel"
             mc:Ignorable="d" 
             Width="300"
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.DataContext>
        <viewmodel:VMLeafCards/>
    </UserControl.DataContext>

    <ItemsControl ItemsSource="{Binding Views}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical" IsItemsHost="True"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <ItemContainerTemplate>

                <Border CornerRadius="5" Padding="15" Margin="5" Effect="{DynamicResource EffectShadow1}" Background="{DynamicResource DarkMaskBrush}">
                    <ContentControl Content="{Binding View}"/>

                </Border>

            </ItemContainerTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

</UserControl>
